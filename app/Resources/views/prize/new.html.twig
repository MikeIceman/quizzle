{% extends 'dashboard/layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col">
            <section class="card">
                <header class="card-header">
                    <h2 class="card-title">Добавление приза</h2>
                </header>
                <div class="card-body">
                    {% form_theme form 'form/quizzle_horizontal_layout.html.twig' %}
                    {{ form_start(form, {'attr': {'class': 'form-bordered'}}) }}

                        {{ form_errors(form) }}

                        {{ form_rest(form) }}

                        <div class="form-group row">
                            <div class="col-md-3 m-auto text-center">
                                <input type="submit" class="btn btn-success" value="Добавить приз" />
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </section>
        </div>
    </div>
{% endblock %}

{% block breadcrumbs %}
    <header class="page-header">
        <h2>Добавление приза</h2>

        <div class="right-wrapper text-right pr-5">
            <ol class="breadcrumbs">
                <li>
                    <a href="{{ path('dashboard') }}" title="Рабочий стол">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li><a href="{{ path('prize_index') }}">Управление призами</a></li>
            </ol>
        </div>
    </header>
{% endblock %}

{% block title %}Добавление приза{% endblock %}
