{% endblock %}

{% block breadcrumbs %}
    <header class="page-header">
        <h2>Победители розыгрышей ценных призов</h2>

        <div class="right-wrapper text-right pr-5">
            <ol class="breadcrumbs">
                <li>
                    <a href="{{ path('dashboard') }}" title="Рабочий стол">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
            </ol>
        </div>
    </header>
{% endblock %}

