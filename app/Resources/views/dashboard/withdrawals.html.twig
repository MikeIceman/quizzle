{% extends 'dashboard/layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col">
            <section class="card">
                <header class="card-header">
                    <h2 class="card-title">Заявки на вывод средств</h2>
                </header>
                <div class="card-body">
                    <table class="table table-bordered table-striped datatable" id="datatable-default">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Дата создания</th>
                            <th>Пользователь</th>
                            <th>Сумма</th>
                            <th>Статус</th>
                            <th>Обновлено</th>
                            <th>Оператор</th>
                            <th>Действия</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for withdrawal in withdrawals %}
                            <tr>
                                <td class="text-right">{{ withdrawal.id }}</td>
                                <td data-sort="{{ withdrawal.dateAdded|date('U') }}">{{ withdrawal.dateAdded|date('d.m.Y H:i:s') }}</td>
                                <td class="text-center">{{ withdrawal.user.username }}</td>
                                <td class="text-right">
                                    <span class="
                                        {% if withdrawal.status == 'pending' %}
                                            text-warning
                                        {% elseif withdrawal.status == 'reversed' %}
                                            text-danger
                                        {% else %}
                                            text-success
                                        {% endif %}
                                    ">
                                    {{ withdrawal.amount|money(2) }}
                                    </span>
                                </td>
                                <td class="text-center" data-sort="{{ withdrawal.status }}">
                                    {% if withdrawal.status == 'pending' %}
                                        <i class="far fa-clock text-warning" style="cursor: help" data-toggle="tooltip" data-original-title="Pending"></i> Pending
                                    {% elseif withdrawal.status == 'complete' %}
                                        <i class="fas fa-check text-success" style="cursor: help" data-toggle="tooltip" data-original-title="Completed"></i> Completed
                                    {% elseif withdrawal.status == 'reversed' %}
                                        <i class="fas fa-sync-alt text-danger" style="cursor: help" data-toggle="tooltip" data-original-title="Reversed"></i> Reversed
                                    {% endif %}
                                </td>
                                <td data-sort="{{ withdrawal.dateUpdated|date('U') }}">{{ withdrawal.dateUpdated|date('d.m.Y H:i:s') }}</td>
                                <td class="text-center font-weight-bold">
                                    {% if withdrawal.updatedBy %}
                                        {{ withdrawal.updatedBy.username }}
                                    {% else %}
                                        <span class="text-danger">System</span>
                                    {% endif %}
                                </td>
                                <td class="text-center" data-sort="{{ withdrawal.status }}">
                                    {% if withdrawal.status == 'pending' %}
                                        <a href="#" title="Подтвердить" class="btn btn-xs btn-success" data-toggle="tooltip" data-original-title="Подтвердить"><i class="fas fa-check"></i></a>
                                        <a href="#" title="Отменить" class="btn btn-xs btn-danger"  data-toggle="tooltip" data-original-title="Отменить"><i class="fas fa-sync-alt"></i></a>
                                    {% elseif withdrawal.status == 'complete' %}
                                        <a href="#" title="Отменить" class="btn btn-xs btn-danger"  data-toggle="tooltip" data-original-title="Отменить"><i class="fas fa-sync-alt"></i></a>
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
{% endblock %}

