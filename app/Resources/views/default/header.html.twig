                        <div class="text-right">
                            <a href="#" class="view-more">Показать все</a>
                        </div>
                    </div>
                </div>
            </li>
        </ul>

        <span class="separator"></span>

        <div id="userbox" class="userbox">
            <a href="#" data-toggle="dropdown">
                <figure class="profile-picture">
                    <img src="https://www.gravatar.com/avatar/{{ user.email | md5 }}?d=identicon&s=35" alt="{{ user.firstname }} {{ user.lastname }}" class="rounded-circle" data-lock-picture="https://www.gravatar.com/avatar/{{ user.email | md5 }}?d=identicon&s=120" />
                </figure>
                <div class="profile-info" data-lock-name="{{ user.firstname }} {{ user.lastname }}" data-lock-email="{{ user.email }}">
                    <span class="name">{{ user.firstname }} {{ user.lastname }}</span>
                    <span class="role">{{ role }}</span>
                </div>

                <i class="fa custom-caret"></i>
            </a>

            <div class="dropdown-menu">
                <ul class="list-unstyled mb-2">
                    <li class="divider"></li>
                    <li>
                        <a role="menuitem" tabindex="-1" href="{{ path('personal') }}"><i class="fas fa-user"></i> Личный раздел</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') != false %}
                        <li>
                            <a role="menuitem" tabindex="-1" href="{{ path('dashboard') }}"><i class="fas fa-cog"></i> Админпанель</a>
                        </li>
                    {% endif %}
                    <li>
                        <a role="menuitem" tabindex="-1" href="{{ path('fos_user_security_logout') }}"><i class="fas fa-power-off"></i> Выход</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- end: search & user box -->
</header>
