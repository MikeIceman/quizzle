{% trans_default_domain 'FOSUserBundle' %}

{% form_theme form 'Form/quizzle_layout.html.twig' %}

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

    {{ form_errors(form) }}

    <div class="form-group mb-0">
        <div class="row">
            <div class="col-sm-6 mb-3">
                {{ form_label(form.firstname) }}
                {{ form_widget(form.firstname) }}
                {{ form_errors(form.firstname) }}
            </div>
            <div class="col-sm-6 mb-3">
                {{ form_label(form.lastname) }}
                {{ form_widget(form.lastname) }}
                {{ form_errors(form.lastname) }}
            </div>
        </div>
    </div>

    {{ form_row(form.username) }}
    {{ form_row(form.email) }}
    {{ form_row(form.phone) }}

    <div class="form-group mb-0">
        <div class="row">
            <div class="col-sm-6 mb-3">
                {{ form_label(form.plainPassword.first) }}
                {{ form_widget(form.plainPassword.first) }}
                {{ form_errors(form.plainPassword.first) }}
            </div>
            <div class="col-sm-6 mb-3">
                {{ form_label(form.plainPassword.second) }}
                {{ form_widget(form.plainPassword.second) }}
                {{ form_errors(form.plainPassword.second) }}
            </div>
        </div>
    </div>

    {{ form_rest(form) }}

    <div class="row">
        <div class="col-sm-6">
            <div class="checkbox-custom checkbox-default">
                <input id="AgreeTerms" name="agreeterms" type="checkbox"/>
                <label for="AgreeTerms">Я согласен с <a href="#">условиями использования сервиса</a></label>
            </div>
        </div>
        <div class="col-sm-6 text-right">
            <input type="submit" id="SubmitForm" class="btn btn-primary mt-2" value="{{ 'registration.submit'|trans }}" disabled="disabled" />
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            $('#AgreeTerms').on('change', function(){
                $('#SubmitForm').attr('disabled',!this.checked);
            });
        });
    </script>


    <span class="mt-3 mb-3 line-thru text-center text-uppercase">
            <span>или</span>
        </span>

    <div class="mb-1 text-center">
        <a class="btn btn-facebook mb-3 ml-1 mr-1" href="#">Войти через <i class="fab fa-facebook-f"></i></a>
        <a class="btn btn-twitter mb-3 ml-1 mr-1" href="#">Войти через <i class="fab fa-vk"></i></a>
    </div>

    <p class="text-center">Уже есть аккаунт? <a href="{{ path('fos_user_security_login') }}">Войти!</a></p>
{{ form_end(form) }}
