{% trans_default_domain 'FOSUserBundle' %}

<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div class="alert alert-info">
        <p class="m-0">{{ 'resetting.request.username'|trans }}</p>
    </div>
    <div class="form-group mb-0">
        <div class="input-group">
            <input name="username" placeholder="" class="form-control form-control-lg" type="email">
            <span class="input-group-append">
                <input class="btn btn-primary btn-lg" type="submit" value="{{ 'resetting.request.submit'|trans }}" />
            </span>
        </div>
    </div>

    <p class="text-center mt-3">Вспомнили? <a href="{{  path('fos_user_security_login') }}">Войти!</a></p>
</form>